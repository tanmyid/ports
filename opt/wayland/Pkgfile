# Description: project to define a protocol for a compositor to talk to its clients as well as a library implementation of the protocol.
# URL		 		 : https://wayland.freedesktop.org/
# Maintainer : tanmyid
# Depends on : libxml2

name=wayland
version=1.18.0
release=1
source=(https://wayland.freedesktop.org/releases/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr    \
            --disable-static \
            --disable-documentation

	make
	make DESTDIR=$PKG install


}
