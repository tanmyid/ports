# Description: Xorg Libraries
# URL		 		 :
# Maintainer : tanmyid
# Depends on :

name=libxshmfence
version=1.3
release=1
source=(https://www.x.org/pub/individual/lib/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
	            --sysconfdir=/etc \
	            --localstatedir=/var \
	            --disable-static

	make
	make DESTDIR=$PKG install


}
