name=xcb-util-image
version=0.4.0
release=1
source=(https://xcb.freedesktop.org/dist/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
	            --sysconfdir=/etc \
	            --localstatedir=/var \
	            --disable-static

	make
	make DESTDIR=$PKG install


}
