# Depends on :

name=libxdamage
version=1.1.5
release=1
source=(https://www.x.org/pub/individual/lib/libXdamage-$version.tar.bz2)

build() {
	cd libXdamage-$version

	./configure --prefix=/usr \
	            --sysconfdir=/etc \
	            --localstatedir=/var \
	            --disable-static

	make
	make DESTDIR=$PKG install


}
