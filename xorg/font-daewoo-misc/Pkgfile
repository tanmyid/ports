# Depends on :

name=font-daewoo-misc
version=1.0.3
release=1
source=(https://www.x.org/pub/individual/font/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static

	make
	make DESTDIR=$PKG install

	find $PKG -name 'fonts.scale' -delete
	find $PKG -name 'fonts.dir' -delete

}
