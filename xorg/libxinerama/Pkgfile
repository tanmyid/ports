# Description: Xorg Libraries
# URL		 		 :
# Maintainer : tanmyid
# Depends on :

name=libxinerama
version=1.1.4
release=1
source=(https://www.x.org/pub/individual/lib/libXinerama-$version.tar.bz2)

build() {
	cd libXinerama-$version

	./configure --prefix=/usr \
	            --sysconfdir=/etc \
	            --localstatedir=/var \
	            --disable-static

	make
	make DESTDIR=$PKG install


}
