# Description: he X.Org Video Driver for framebuffer devices
# URL		 		 :
# Maintainer : tanmyid
# Depends on : xorg-server

name=xf86-video-fbdev
version=0.5.0
release=1
source=(https://www.x.org/pub/individual/driver/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
	            --sysconfdir=/etc \
	            --localstatedir=/var \
	            --disable-static

	make
	make DESTDIR=$PKG install

}
